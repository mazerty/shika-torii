<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fr.mazerty.shika.torii.UserDao">

    <select id="selectByEmailAndPassword" resultType="fr.mazerty.shika.torii.User">
        SELECT
            id,
            email,
            password
        FROM torii.t_user
        WHERE email = #{email}
    </select>

</mapper>
